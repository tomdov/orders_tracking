<tr>
    <span class="user">

      <% if currect_user?(feed_item.user) %>
      <%= render 'orders/order', :order => feed_item %>

      <td>
        <%= link_to "Edit", "/orders/#{feed_item.id}/edit" %>
      </td>

      <td>
          <%= link_to "Delete", feed_item,
                                :method => :delete,
                                :data   => { :confirm => "You sure?" },
                                :title  => "Delete order" %>
      </td>
      <% end %>

    </span>
</tr>