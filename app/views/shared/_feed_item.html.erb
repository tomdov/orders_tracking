<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="order">
    <span class="user">
      <%= render 'orders/order', :order => feed_item %>
      <% if currect_user?(feed_item.user) %>
      |
      <%= link_to "Delete", feed_item, :method => :delete, :data => { :confirm => "You sure?" },
                  :title => "Delete order" %>
      <% end %>

    </span>
  </td>
</tr>