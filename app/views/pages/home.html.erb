<% if signed_in? %>

    <table class="front" summary="For signed-in users">
      <tr>
        <td class="main">
          <h1 class="micropost">What's UPPP?</h1>
          <%= render 'shared/microposts_form' %>
          <%= render 'shared/feed' %>
        </td>
        <td class="sidebar round">
          <%= render 'shared/user_info' %>
        </td>
      </tr>
    </table>


<% else %>

<h1>Welcome!!</h1>
